{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "app",
            "cwd": "${workspaceRoot}",
            "envFile": "${workspaceFolder}/.env.local",
            "console": "integratedTerminal",
            "debugStdLib": true, // Otherwise breakpoints in libs won’t work
        },
        {
            "name": "Python: Module - redis",
            "type": "python",
            "request": "launch",
            "module": "app",
            "cwd": "${workspaceRoot}",
            "envFile": "${workspaceFolder}/.env.local.redis",
            "console": "integratedTerminal",
            "debugStdLib": true, // Otherwise breakpoints in libs won’t work
        },
        {
            "name": "Python: Module - mock",
            "type": "python",
            "request": "launch",
            "module": "app",
            "cwd": "${workspaceRoot}",
            "envFile": "${workspaceFolder}/.env.local.mock",
            "console": "integratedTerminal",
            "debugStdLib": true, // Otherwise breakpoints in libs won’t work
        },
        {
            "name": "Python: Integration tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "envFile": "${workspaceFolder}/.env.tests",
            "console": "integratedTerminal",
            "debugStdLib": true, // Otherwise breakpoints in libs won’t work
            "args": [
                "tests_integration/"
                //"-k",
                //"test_proxy_authenticated_headers"
            ]
        },
        {
            "name": "Python: Unit tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "envFile": "${workspaceFolder}/.env.tests",
            "console": "integratedTerminal",
            "debugStdLib": true, // Otherwise breakpoints in libs won’t work
            "args": [
                "tests/"
                //"-k",
                //"test_proxy_authenticated_headers_removed"
            ]
        },
        {
            "name": "Python: Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/server.py",
            "env": {
                "FLASK_ENV": "development"
            }
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "server.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        }
    ]
}